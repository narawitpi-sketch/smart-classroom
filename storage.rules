rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    // Default deny all access.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload images into a folder named with their UID.
    // This prevents users from overwriting each other's files.
    // The path will look like: issues/{userId}/{fileName}
    match /issues/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow authenticated users to read images
    }

    // Allow admins to read and delete any file in the 'issues' folder.
    match /issues/{userId}/{allPaths=**} {
        allow read, delete: if isAdmin();
    }
  }
}
